    // ==========================
    // ENHANCED UPDATE FUNCTIONS
    // ==========================
    
    function updateSignal() {
      const signal = botState.signal;
      if (!signal) return;
      
      const actionEl = document.getElementById('signalAction');
      const scoreEl = document.getElementById('signalScore');
      const reasonEl = document.getElementById('signalReason');
      const breakdownEl = document.getElementById('signalBreakdown');
      
      actionEl.textContent = signal.action.toUpperCase();
      actionEl.className = `signal-action ${signal.action}`;
      scoreEl.textContent = `Score: ${signal.score}/100`;
      reasonEl.textContent = signal.reason || 'No reason provided';
      
      // Show breakdown if available
      if (signal.breakdown) {
        const b = signal.breakdown;
        breakdownEl.textContent = `Patterns: ${b.patternScore}/100 | Indicators: ${b.indicatorScore}/100 | Bonus: +${b.multiTimeframeBonus}`;
      }
      
      // Update pattern markers
      if (signal.patterns) {
        // For now, create fake pattern objects (you'll need real data from server)
        const patternObjs = signal.patterns.map(name => ({
          name,
          type: signal.action === 'buy' ? 'bullish' : signal.action === 'sell' ? 'bearish' : 'neutral'
        }));
        updatePatternMarkers(patternObjs);
      }
    }
    
    function updatePosition() {
      const container = document.getElementById('positionContainer');
      const closeBtn = document.getElementById('closePositionBtn');
      const position = botState.position;
      
      if (!position) {
        container.innerHTML = '<p style="text-align: center; color: #888; padding: 40px;">No open positions</p>';
        closeBtn.style.display = 'none';
        return;
      }
      
      closeBtn.style.display = 'block';
      
      const pnl = position.pnl || 0;
      const pnlColor = pnl >= 0 ? '#4ade80' : '#ef4444';
      const holdTime = Math.floor((Date.now() - position.entryTime) / 1000);
      
      container.innerHTML = `
        <div style="padding: 20px;">
          <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
            <div>
              <div style="color: #888; font-size: 0.85em;">Entry Price</div>
              <div style="font-size: 1.2em; font-weight: 600;">$${position.entryPrice?.toFixed(2) || '0.00'}</div>
            </div>
            <div style="text-align: right;">
              <div style="color: #888; font-size: 0.85em;">P&L</div>
              <div style="font-size: 1.5em; font-weight: 700; color: ${pnlColor};">${pnl >= 0 ? '+' : ''}${pnl.toFixed(2)}%</div>
            </div>
          </div>
          <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; padding-top: 15px; border-top: 1px solid rgba(255,255,255,0.1);">
            <div>
              <div style="color: #888; font-size: 0.85em;">Amount</div>
              <div>${position.amountSol?.toFixed(4) || '0'} SOL</div>
            </div>
            <div>
              <div style="color: #888; font-size: 0.85em;">Hold Time</div>
              <div>${Math.floor(holdTime / 60)}m ${holdTime % 60}s</div>
            </div>
          </div>
        </div>
      `;
    }
    
    function updateTradesTable() {
      const tbody = document.getElementById('tradesBody');
      const trades = botState.trades || [];
      
      if (trades.length === 0) {
        tbody.innerHTML = '<tr><td colspan="6" style="text-align: center; color: #888; padding: 40px;">No trades yet</td></tr>';
        return;
      }
      
      tbody.innerHTML = trades.slice(-10).reverse().map(trade => {
        const pnl = trade.pnl || 0;
        const pnlColor = pnl >= 0 ? '#4ade80' : '#ef4444';
        const date = new Date(trade.exitTime);
        const holdSeconds = Math.floor((trade.exitTime - trade.entryTime) / 1000);
        const holdTime = holdSeconds > 60 ? `${Math.floor(holdSeconds / 60)}m` : `${holdSeconds}s`;
        
        return `
          <tr>
            <td>${date.toLocaleTimeString()}</td>
            <td style="font-size: 0.85em;">$${trade.entryPrice?.toFixed(2) || '0'}</td>
            <td style="font-size: 0.85em;">$${trade.exitPrice?.toFixed(2) || '0'}</td>
            <td style="color: ${pnlColor}; font-weight: 600;">${pnl >= 0 ? '+' : ''}${pnl.toFixed(2)}%</td>
            <td style="font-size: 0.85em;">${holdTime}</td>
            <td style="font-size: 0.85em; color: #888;">${trade.reason || 'Unknown'}</td>
          </tr>
        `;
      }).join('');
    }
    
    // Initialize chart on page load
    setTimeout(initializeSignalLog, 100);
  </script>
