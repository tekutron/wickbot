      });
    }, 5000);
    
    // ==========================
    // CHART FUNCTIONALITY
    // ==========================
    
    let signalLogEntries = [];
    const MAX_LOG_ENTRIES = 50;
    
    function initializeSignalLog() {
      // Signal log is ready, no initialization needed
      console.log('Signal log initialized');
    }
    
    function addSignalToLog(signal) {
      const timestamp = new Date(signal.timestamp).toLocaleTimeString();
      const action = signal.action.toUpperCase();
      const confidence = signal.score || 0;
      const reason = signal.reason || 'No reason provided';
      
      // Color based on action
      let color = '#888';
      let icon = '‚ö™';
      if (action === 'BUY') {
        color = '#4ade80';
        icon = 'üü¢';
      } else if (action === 'SELL') {
        color = '#ef4444';
        icon = 'üî¥';
      }
      
      // Create log entry
      const entry = {
        timestamp,
        action,
        confidence,
        reason,
        color,
        icon
      };
      
      signalLogEntries.unshift(entry); // Add to beginning
      if (signalLogEntries.length > MAX_LOG_ENTRIES) {
        signalLogEntries.pop(); // Remove oldest
      }
      
      updateSignalLogDisplay();
    }
    
    function updateSignalLogDisplay() {
      const logContainer = document.getElementById('signalLog');
      
      if (signalLogEntries.length === 0) {
        logContainer.innerHTML = '<div style="color: #888; text-align: center; padding: 20px;">Waiting for signals...</div>';
        return;
      }
      
      const html = signalLogEntries.map(entry => `
        <div style="padding: 8px 0; border-bottom: 1px solid rgba(255,255,255,0.05);">
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <span style="color: #666;">${entry.timestamp}</span>
            <span style="color: ${entry.color}; font-weight: bold;">${entry.icon} ${entry.action} ${entry.confidence > 0 ? `(${entry.confidence}%)` : ''}</span>
          </div>
          <div style="color: #aaa; font-size: 12px; margin-top: 4px;">${entry.reason}</div>
        </div>
      `).join('');
      
      logContainer.innerHTML = html;
      
      // Auto-scroll to top (newest entry)
      logContainer.scrollTop = 0;
    }
    
    function clearSignalLog() {
      signalLogEntries = [];
      updateSignalLogDisplay();
    }
    
    // Legacy function stubs (no-op, for compatibility)
    function switchChartTimeframe() {}
    function loadChartData() {}
